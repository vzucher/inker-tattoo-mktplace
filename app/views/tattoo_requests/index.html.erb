        <div class="container mt-3">
      <div class="row">
        <div class="col-12">
                 <% if current_user.tattoo_artist? %>
          <h2><%= 'Todas as Requisições que você recebeu:'%> (<%= @tattoo_requests.count %>)</h2>
        <% else %>
          <h2><%= 'Todas as Requisições que você fez '%> </h2>
        <% end %>
        </div>
      </div>
            <div class="row">
        <div class="col">
            <h5>All Requests (<%= @tattoo_requests.count %>)</h5>
        </div>
      </div>
<br><br>
  <div class="flexbox">
      <div class="row">
<% @tattoo_requests.each do |t|  %>
          <div class="col-6">
  <div class="card-product flat-card">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
  <div class="card-product-infos">
    <div class="row">
    <div class="flexbox align-items-center">
    <strong>Requisição nº <%= t.id %></strong>
    <h5> Tema: <%= t.title %> </h5>
    <h6> Status: Aguardando</h6>
    </div>
    <div class="flexbox btn-vertical">
      <button type="button" class="btn btn-gradient align-items-center" data-toggle="modal" data-target="#modalQuickView<%= t.id %>">Mais detalhes</button>
    </div>
    </div>
  </div>
</div>
</div>
<!-- ---------tattoo-modal-request ------------- -->
<div class="modal fade" id="modalQuickView<%= t.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-5">
            <!--Carousel Wrapper-->
            <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails"
              data-ride="carousel">
              <!--Slides-->
              <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                  <img class="d-block w-100"
                    src="https://i.pinimg.com/originals/24/b4/ac/24b4ac1a18eed9379d231bc06bb6a3a7.jpg"
                    alt="First slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100"
                    src="https://i.pinimg.com/originals/59/9c/35/599c35990cd3e45ea07fc6111ebf0e63.jpg"
                    alt="Second slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100"
                    src="https://tattoodo-mobile-app.imgix.net/images/posts/20190812_8ImKSlW9XZOrogE.png?auto=format,compress&w=400"
                    alt="Third slide">
                </div>
              </div>
              <!--/.Slides-->
              <!--Controls-->
              <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
              <!--/.Controls-->
              <ol class="carousel-indicators">
                <li data-target="#carousel-thumb" data-slide-to="0" class="active">
                  <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Vertical/img%20(23).jpg" width="60">
                </li>
                <li data-target="#carousel-thumb" data-slide-to="1">
                  <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Vertical/img%20(24).jpg" width="60">
                </li>
                <li data-target="#carousel-thumb" data-slide-to="2">
                  <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Vertical/img%20(25).jpg" width="60">
                </li>
              </ol>
            </div>
            <!--/.Carousel Wrapper-->
          </div>
          <div class="col-lg-7">
            <br>
            <h2 class="h2-responsive product-name">
              <strong>Requisição nº <%= t.id %></strong>
            </h2>
<br>
            <!--Accordion wrapper-->
            <div class="accordion md-accordion" id="accordionEx" role="tablist" aria-multiselectable="true">
              <!-- Accordion card -->
              <div class="card">
                <!-- Card header -->
                <div class="card-header" role="tab" id="headingOne1">
                  <a data-toggle="collapse" data-parent="#accordionEx" href="#collapseOne1" aria-expanded="true"
                    aria-controls="collapseOne1">
                    <h5 class="mb-0">
                      Informações da tatuagem: <i class="fas fa-angle-down rotate-icon"></i>
                    </h5>
                  </a>
                </div>
                <!-- Card body -->
                <div id="collapseOne1" class="collapse show" role="tabpanel" aria-labelledby="headingOne1"
                  data-parent="#accordionEx">
                  <div class="card-body">
                    <h6> Descrição: </h6>  <%= t.description %>
                  </div>
                </div>
              </div>
              <!-- Accordion card -->
              <!-- Accordion card -->
              <div class="card">
                <div id="collapseOne1" class="collapse show" role="tabpanel" aria-labelledby="headingOne1"
                  data-parent="#accordionEx">
                  <div class="card-body">
                   <h6>Bodypart:</h6>
                    <%= t.bodypart %>
                  </div>
                </div>
                <!-- Card header -->
                <!-- Card body -->
              </div>
              <!-- Accordion card -->
              <!-- Accordion card -->
              <div class="card">
                <!-- Card header -->
                <!-- Card body -->
              </div>
              <!-- Accordion card -->
            </div>
            <!-- Accordion wrapper -->
            <!-- Add to Cart -->
            <div class="card-body">
     <!--          <div class="row">
                <div class="col-md-6">
                  <select class="md-form mdb-select colorful-select dropdown-primary">
                    <option value="" disabled selected>Choose your option</option>
                    <option value="1">White</option>
                    <option value="2">Black</option>
                    <option value="3">Pink</option>
                  </select>
                  <label>Select color</label>
                </div>
                <div class="col-md-6">
                  <select class="md-form mdb-select colorful-select dropdown-primary">
                    <option value="" disabled selected>Choose your option</option>
                    <option value="1">XS</option>
                    <option value="2">S</option>
                    <option value="3">L</option>
                  </select>
                  <label>Select size</label>
                </div>
              </div> -->
              <div class="text-center">
                 <% if current_user.user? %>
                 <h5>Status:</h5>
                 <p>Aguardando resposta do tatuador</p>
                 <br>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <% else %>
                <%= link_to tattoo_artist_tattoo_request_path(t.tattoo_artist_id, t)+ "?decision=accept", method: :put do %>
                <button class="btn btn-primary" id='accept-schedule'>Aceitar
                  <i class="fas fa-cart-plus ml-2" aria-hidden="true"></i>
                </button>
                <% end %>
                <%= link_to tattoo_artist_tattoo_request_path(t.tattoo_artist_id, t)+ "?decision=decline", method: :put do %>
                <button class="btn btn-primary" id='decline-schedule'>Recusar
                  <i class="fas fa-cart-plus ml-2" aria-hidden="true"></i>
                </button>
                <% end %>
                <% end %>
              </div>
            </div>
            <!-- /.Add to Cart -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
